    <div class="calculator">
        <input type="text" class="display" id="display" readonly>
        <button class="button clear" onclick="clearDisplay()">C</button>
        <button class="button divide" onclick="appendToDisplay('/')">/</button>
        <button class="button multiply" onclick="appendToDisplay('*')">*</button>
        <button class="button subtract" onclick="appendToDisplay('-')">-</button>
        <button class="button seven" onclick="appendToDisplay('7')">7</button>
        <button class="button eight" onclick="appendToDisplay('8')">8</button>
        <button class="button nine" onclick="appendToDisplay('9')">9</button>
        <button class="button add" onclick="appendToDisplay('+')">+</button>
        <button class="button four" onclick="appendToDisplay('4')">4</button>
        <button class="button five" onclick="appendToDisplay('5')">5</button>
        <button class="button six" onclick="appendToDisplay('6')">6</button>
        <button class="button add" onclick="appendToDisplay('+')">+</button>
        <button class="button one" onclick="appendToDisplay('1')">1</button>
        <button class="button two" onclick="appendToDisplay('2')">2</button>
        <button class="button three" onclick="appendToDisplay('3')">3</button>
        <button class="button equals" onclick="calculate()">=</button>
        <button class="button zero" onclick="appendToDisplay('0')">0</button>
        <button class="button decimal" onclick="appendToDisplay('.')">.</button>
    </div>
    <div class="cake-background" id="cake-background"></div>
    <script>
        let newCalculation = false;

        function appendToDisplay(value) {
            const display = document.getElementById('display');
            if (newCalculation) {
                display.value = value;
                newCalculation = false;
            } else {
                display.value += value;
            }
        }

        function clearDisplay() {
            document.getElementById('display').value = '';
            newCalculation = false;
        }

        function calculate() {
            try {
                const display = document.getElementById('display');
                display.value = eval(display.value);
                showCakeBackground();
                newCalculation = true;
            } catch (error) {
                document.getElementById('display').value = '错误';
                newCalculation = false;
            }
        }

        function showCakeBackground() {
            const cakeBg = document.getElementById('cake-background');
            cakeBg.style.display = 'block';
            setTimeout(() => {
                cakeBg.style.display = 'none';
            }, 3000);
        }
    </script>
