    <div class="calculator">
        <input type="text" class="display" id="display" readonly>
        <button class="button clear" onclick="playClickSound(); clearDisplay()">C</button>
        <button class="button divide" onclick="playClickSound(); appendToDisplay('/')">/</button>
        <button class="button multiply" onclick="playClickSound(); appendToDisplay('*')">*</button>
        <button class="button subtract" onclick="playClickSound(); appendToDisplay('-')">-</button>
        <button class="button seven" onclick="playClickSound(); appendToDisplay('7')">7</button>
        <button class="button eight" onclick="playClickSound(); appendToDisplay('8')">8</button>
        <button class="button nine" onclick="playClickSound(); appendToDisplay('9')">9</button>
        <button class="button add" onclick="playClickSound(); appendToDisplay('+')">+</button>
        <button class="button four" onclick="playClickSound(); appendToDisplay('4')">4</button>
        <button class="button five" onclick="playClickSound(); appendToDisplay('5')">5</button>
        <button class="button six" onclick="playClickSound(); appendToDisplay('6')">6</button>
        <button class="button add" onclick="playClickSound(); appendToDisplay('+')">+</button>
        <button class="button one" onclick="playClickSound(); appendToDisplay('1')">1</button>
        <button class="button two" onclick="playClickSound(); appendToDisplay('2')">2</button>
        <button class="button three" onclick="playClickSound(); appendToDisplay('3')">3</button>
        <button class="button equals" onclick="playClickSound(); calculate()">=</button>
        <button class="button zero" onclick="playClickSound(); appendToDisplay('0')">0</button>
        <button class="button decimal" onclick="playClickSound(); appendToDisplay('.')">.</button>
    </div>
    <div class="fireworks" id="fireworks"></div>
    <audio id="clickSound" src="https://www.soundjay.com/button/beep-07.wav"></audio>
    <script>
        const buttonElements = document.querySelectorAll('.button');
        const pastelColors = ['#F8EDE3', '#DFD3C3', '#D0B8A8', '#7D6E83', '#9F8772', '#B09B71', '#E5E3C9', '#F0EBE3'];
        let colorIndex = 0;
        let newCalculation = false;

        buttonElements.forEach((button) => {
            button.style.backgroundColor = pastelColors[colorIndex % pastelColors.length];
            colorIndex++;
        });

        function appendToDisplay(value) {
            const display = document.getElementById('display');
            if (newCalculation) {
                display.value = value;
                newCalculation = false;
            } else {
                display.value += value;
            }
        }

        function clearDisplay() {
            document.getElementById('display').value = '';
            newCalculation = false;
        }

        function calculate() {
            try {
                const display = document.getElementById('display');
                display.value = eval(display.value);
                showFireworks();
                newCalculation = true;
            } catch (error) {
                document.getElementById('display').value = '错误';
                newCalculation = false;
            }
        }

        function showFireworks() {
            const fireworks = document.getElementById('fireworks');
            fireworks.style.display = 'block';

            for (let i = 0; i < 20; i++) {
                const firework = document.createElement('div');
                firework.classList.add('firework');
                firework.style.left = Math.random() * window.innerWidth + 'px';
                firework.style.top = Math.random() * window.innerHeight + 'px';
                firework.style.backgroundColor = getRandomColor();
                fireworks.appendChild(firework);

                setTimeout(() => {
                    firework.remove();
                }, 1000);
            }

            setTimeout(() => {
                fireworks.style.display = 'none';
            }, 1000);
        }

        function getRandomColor() {
            const letters = '0123456789ABCDEF';
            let color = '#';
            for (let i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }

        function playClickSound() {
            const audio = document.getElementById('clickSound');
            audio.currentTime = 0;
            audio.play();
        }
    </script>
</body>

